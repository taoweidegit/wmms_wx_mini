/* pages/verification/verification.wxss */
page {
  min-height: 100%;
  background-color: #e4e4e4;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: -60px;
}

.card {
  width: 95%;
  background-color: #fff;
  margin: 10px auto 0;
  border-radius: 20rpx;
  position: relative;
  bottom: 20px;
  height: 110px;
}

.b-shadow {
  box-shadow: 10rpx 10rpx 20rpx #999;
}

.nearCard-fr {
  line-height: 50rpx;
  width: 50%;
  color: #999;
  float: right;
}

.nearCard-fr image {
  width: 180rpx;
  height: 180rpx;
  padding: 8% 24%;
  margin-top: -120px;
  position: relative;
  bottom: 30px;
}

.c-green{
   font-size: 15px;
   color: black;
}

.nearCard-fl {
  line-height: 50rpx;
  width: 50%;
  margin-left: 10%;
  margin-top: 15rpx;
  color: black;
}

.weui-input{
  /* background-color: black; */
  width: 80px;
  position: relative;
  left: 40px;
  bottom: 20px;
  /* display: flex; */
  text-align: center;
  font-size: 18px;
  /* justify-content: center; */
}

